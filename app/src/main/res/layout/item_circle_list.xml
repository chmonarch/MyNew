<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_load_photo_fail"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/iv_head"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/font_normal2"
            tools:text="小崽子"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="12sp"
            tools:text="2015-01-10"/>
    </RelativeLayout>

    <com.zzb.mynew.view.ExpandableTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentTextSize="14sp"
        app:textCollapse="@string/shink"
        app:showExpandCollapseDrawable="false"
        app:textExpand="@string/expand"
        android:padding="10dp"
        app:maxCollapsedLines="4"
        tools:text="分享了一个连接撒个的撒多撒的核辐射混分巨兽佛挡杀佛都是返回都是返回积分萨卡减肥的扩散"/>
    <com.zzb.mynew.view.MultiImageView
        android:id="@+id/multiImagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="5dp" >
    </com.zzb.mynew.view.MultiImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/tv_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10"
            android:layout_weight="1"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center_vertical"
            android:text="无锡.滨湖"
            android:padding="8dp"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/text_size_12"
            />

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:drawableLeft="@drawable/ic_comment_count"
            android:drawablePadding="@dimen/space_2"
            android:gravity="center_vertical"
            android:text="22"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/text_size_12"
            />

        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/btn_icon_liked"
            android:drawablePadding="@dimen/space_2"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="2"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/text_size_12"
            />
    </LinearLayout>
</LinearLayout>