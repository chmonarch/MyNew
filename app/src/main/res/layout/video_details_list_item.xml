<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <!--头像-->
        <ImageView
            android:id="@+id/civ_user_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/icon_user_default"
            />
        <!--用户名-->
        <TextView
            android:id="@+id/tv_video_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/civ_user_detail"
            android:text="游客"
            android:textColor="#bababa"
            />
        <!--发布时间-->
        <TextView
            android:id="@+id/tv_publish_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="发布时间"
            android:visibility="gone"
            android:textColor="#bababa"
            android:textSize="12sp"/>
    </RelativeLayout>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/jc_video_player"
        >
    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
    <TextView
        android:id="@+id/tv_video_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="标题："
        android:textColor="#bababa"
        android:textSize="14sp"
        />

    <!--好笑  评论  分享   再生-->
    <TextView
        android:id="@+id/tv_video_details_smil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="好笑0 · 评论0 · 分享0 · 再生0 "
        android:textColor="#bababa"
        android:textSize="12sp"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#464646"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--好笑图标-->
        <ImageView
            android:id="@+id/iv_video_details_smill"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/operation_support"/>

        <!--分享图标-->
        <ImageView
            android:id="@+id/iv_video_details_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/operation_more"/>
        <!--哭脸图标-->
        <ImageView
            android:id="@+id/iv_video_details_cry"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_video_details_smill"
            android:src="@drawable/operation_unsupport"/>
        <!--评论图标-->
        <ImageView
            android:id="@+id/iv_ovideo_details_comment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/iv_video_details_cry"
            android:src="@drawable/operation_comments"/>
    </RelativeLayout>
</LinearLayout>